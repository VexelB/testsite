include ../dropdowncont/dropdowncont
include ../button/button

mixin dropdown(options)
    -
        let vals = options.vals || ["Добавьте опций"]
    div(class="drop"+(options.type|| ""))
        span(class="title")= options.title || "Dropdown"
        div(class="dropdown")
            span=options.value || "Dropdown"
            svg(width="13", height="8")
                path(d = "M11.3301 0.578125L12.7363 1.98438L6.73633 7.98438L0.736328 1.98438L2.14258 0.578125L6.73633 5.17188L11.3301 0.578125Z")
        .dropdown-content
            each val in vals
                +dropdowncont({value: val})
            .but
                +button({className: "err", title: "Отчистить"})
                +button({className: "suc", title: "Применить"})